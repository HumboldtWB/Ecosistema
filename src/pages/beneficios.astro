---
import Layout from '../layouts/Layout.astro';
import Noticias from '../components/Noticias.astro';
import Menu from '../components/Menu.astro';
---

<Layout title="Iniciativas | Ecosistema Humboldt">
    
    <main>
        <div class="max-w-[90%] mx-auto ">
            <h1 class="text-azul-humboldt text-5xl mt-10 mb-3">
                Plan de beneficios
            </h1>
            <p>
                Conoce todos los beneficios que tenemos para ti.
            </p>
            <hr class="mt-10  mb-7 border-gray-500">
        </div>
        
    

        <section class="max-w-[90%] mx-auto">
            
                <div class="grid grid-cols-3 gap-28">
                
                    <div class="flex flex-col rounded-lg bg-[#DCE0CD] hover:bg-azul-humboldt hover:text-white">
                        <p class="p-5 text-2xl text-center font-light justify-between hover:text-white">
                            Beneficios Humboldt y convenios
                        </p>
                        <a href="docs/Iniciativas-Convenios.pdf" target="_blank" rel="noopener noreferrer" class="block w-[80%] mx-[auto] mb-3 p-3 bg-white rounded-lg">
                            <img src="img/flecha.svg" alt="" width="60" class="block mx-auto">
                        </a>
                    </div>

                    <div class="flex flex-col rounded-lg bg-[#DCE0CD] hover:bg-azul-humboldt hover:text-white justify-between">
                        <p class="p-5 text-2xl text-center font-light hover:text-white">
                            Beneficios de salud
                        </p>
                        <a href="docs/Beneficios-Salud.pdf" target="_blank" rel="noopener noreferrer" class="block w-[80%] mx-[auto] mb-3 p-3 bg-white rounded-lg">
                            <img src="img/flecha.svg" alt="" width="60" class="block mx-auto">
                        </a>
                    </div>

                    <div class="flex flex-col rounded-lg bg-[#DCE0CD] hover:bg-azul-humboldt hover:text-white justify-between">
                        <p class="p-5 text-2xl text-center font-light hover:text-white">
                            Otros <br> beneficios
                        </p>
                        <a href="docs/Otros-Beneficios.pdf" target="_blank" rel="noopener noreferrer" class="block w-[80%] mx-[auto] mb-3 p-3 bg-white rounded-lg">
                            <img src="img/flecha.svg" alt="" width="60" class="block mx-auto">
                        </a>
                    </div>

                </div>        
                        
        </section>


