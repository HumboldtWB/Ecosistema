  <script src="flowbite/dist/flowbite.min.js"></script>
</Layout>

<style>
  .link-card-grid {
    display: flex;
    justify-content: space-around;
    align-items: center;
    border: 1px solid #000;
    margin: 1em auto;
    padding: 1em;
    border-radius: 10em;
  }

  @media screen and (max-width: 767px) {
    .link-card-grid {
      flex-direction: column;
      border: none;
      margin: 0.5em auto;
      padding: 1em;
    }
  }
</style>
