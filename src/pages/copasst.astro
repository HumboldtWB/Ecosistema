    <div class="max-w-[90%] mx-auto">
      <h1 class="text-azul-humboldt text-5xl mt-10 mb-3">COPASST</h1>
    </div>

    <section class="mt-10">
      <div class="max-w-[90%] mx-auto mb-10">
        <div id="accordion-collapse" data-accordion="collapse">
          <h2 id="accordion-collapse-heading-1">
