---
import Layout from "../layouts/Layout.astro";
import Noticias from "../components/Noticias.astro";
import Menu from "../components/Menu.astro";
import News from "../components/News.astro";
---

<Layout title="Portada | Ecosistema Humboldt">
  <main class="relative">
    <section class="max-w-[90%] md:max-w-[90%] mx-auto mt-28">
      <div class="swiper relative" id="noticias">
        <Noticias />
        <!-- If we need pagination -->
        <div class="swiper-pagination"></div>

        <!-- If we need navigation buttons -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
      </div>
    </section>

    <section class="max-w-[90%] md:max-w-[70%] mx-auto">
      <ul role="list" class="link-card-grid">
        <Menu
          href="#noticias"
          title="Noticias"
          classes="active"
          targets="_self"
        />
        <Menu
          href="#comunidad"
          title="Comunidad Humboldt"
          classes=""
          targets="_self"
        />
        <Menu
          href="https://www.humboldt.org.co/descubre#curiosos"
          title="Desconéctate"
          classes=""
          targets="_blank"
        />
        <Menu href="#cumples" title="Cumpleaños" classes="" targets="_self" />
      </ul>
    </section>
    <section class="max-w-[90%] mx-auto h-auto" id="noticias">
      <h1 class="text-7xl mt-10 mb-5">Noticias</h1>
      <hr class="border-gray-500" />
    </section>
    <section class="max-w-[90%] mx-auto h-auto">
      <div
        class="grid grid-cols-1 lg:grid-cols-3 gap-4 mt-10 h-auto lg:h-[260px]"
      >
        <News />
      </div>
      <div class="block text-center mt-10">
        <a
          href="https://www.humboldt.org.co/noticia/noticias"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-black text-white py-3 px-14 flex max-w-fit mx-auto rounded-3xl font-light"
        >
          <img src="img/noticias.svg" alt="noticias" width="28" class="mr-4" />
          Mira todas las noticias
        </a>
      </div>
    </section>

    <section class="max-w-[90%] mx-auto" id="comunidad">
      <h3 class="text-5xl md:text-7xl mt-16">Comunidad Humboldt</h3>
      <hr class="mt-10 mb-7 border-gray-500" />
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-16 mt-10">
        <div class="bg-azul-light p-8 rounded-lg flex flex-col justify-between">
          <a href="iniciativas">
            <img src="img/estructura.png" alt="" class="block mx-auto" />
            <h4 class="text-white text-4xl text-center mb-3">
              Comunidades Humboldt
            </h4>
            <p class="text-center text-white text-sm mt-5">
              <b>Se parte</b> de los diferentes grupos liderados por tus compañeros,
              y anímate a ser parte de ellos.
            </p>
          </a>
        </div>
        <div class="bg-azul-light p-8 rounded-lg flex flex-col justify-between">
          <a href="docs/beneficios-humboldt.pdf" target="_blank">
            <img src="img/plan.png" alt="" class="block mx-auto" />
            <h4 class="text-white text-4xl text-center mb-3">
              Plan de Beneficios
            </h4>
            <p class="text-center text-white text-sm mt-5">
              <b>Conoce aquí</b> todos los beneficios que tiene el Instituto para
              tí
            </p>
          </a>
        </div>
        <div class="bg-azul-light p-8 rounded-lg flex flex-col justify-between">
          <a href="copasst">
            <img src="img/iniciativas.png" alt="" class="block mx-auto" />
            <h4 class="text-white text-4xl text-center mt-5">
              Grupos de atención
            </h4>
            <p class="text-center text-white text-sm mt-5">
              <b>Conoce aquí</b> a los diferentes grupos de atención
            </p>
          </a>
        </div>
      </div>
    </section>

    <section class="max-w-[90%] mx-auto">
      <hr class="mt-20 mb-7 border-gray-500" />

      <div class="grid grid-cols-1 lg:grid-cols-[59%_40%] gap-4">
        <div class="rounded-lg bg-[#E0E0E0] p-5">
          <h4 class="text-azul-humboldt font-bold text-4xl">
            Te escuchamos Humboldt
          </h4>
          <div class="grid grid-cols-2 mt-5 mb-10">
            <div>
              <p class="font-bold">
                Contacto de gestión Humana <br />
                <span class="font-light">
                  <a href="mailto:yoreporto@humboldt.org.co"
                    >yoreporto@humboldt.org.co</a
                  >
                </span>
              </p>
            </div>
            <div>
              <div class="grid grid-cols-[65%_35%]">
                <p class="font-bold">
                  Línea de atención psicológica (SURA) <br />
                  <span class="font-light">320 926 8886</span>
                </p>
                <img
                  src="img/sura.png"
                  alt="logo sura"
                  width="150"
                  class="ms-0 block mr-auto"
                />
              </div>
            </div>
          </div>
          <a
            href="https://teescuchamoshumboldt.ethicsglobal.com"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img
              src="img/ethics.svg"
              alt="ethics global"
              width="200"
              class="ms-0 my-3 block mr-auto"
            />
          </a>

          <div class="grid gap-5 grid-cols-1 lg:grid-cols-[70%_30%]">
            <div>
              <p class="text-sm">
                <a
                  href="https://teescuchamoshumboldt.ethicsglobal.com/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="font-bold text-azul-humboldt"
                >
                  Reporta
                </a> posibles actos o conductas que violen nuestra política de Integridad
                (Política de Ética y Transparencia y Código Institucional de Conducta
                Íntegra). Sitio Web: <a
                  href="https://teescuchamoshumboldt.ethicsglobal.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  >teescuchamoshumboldt.ethicsglobal.com</a
                > Teléfono 01 800 518 9191
              </p>
              <div></div>
            </div>
          </div>
        </div>

        <div class="">
          <div class="rounded-lg bg-[#DCE0CD] p-3 mb-3">
            <!-- Begin MailChimp Signup Form -->
            <style scoped type="text/css">
              .mc-field-group {
                display: inline-block;
              } /* positions input field horizontally */

              #mc_embed_signup label {
                display: block;
                font-size: 16px;
                padding-bottom: 10px;
                font-weight: bold;
              }
              #mc_embed_signup .clear {
                display: inline-block;
              } /* positions button horizontally in line with input */
              #mc_embed_signup .button {
                font-size: 13px;
                border: none;
                letter-spacing: 0.03em;
                color: #fff;
                background-color: #aaa;
                box-sizing: border-box;
                height: 32px;
                line-height: 32px;
                padding: 0 18px;
                display: inline-block;
                margin: 0;
                transition: all 0.23s ease-in-out 0s;
              }
              #mc_embed_signup .button:hover {
                background-color: #777;
                cursor: pointer;
              }
              #mc_embed_signup div#mce-responses {
                float: left;
                top: -1.4em;
                padding: 0em 0.5em 0em 0.5em;
                overflow: hidden;
                width: 90%;
                margin: 0 5%;
                clear: both;
              }
              #mc_embed_signup div.response {
                margin: 1em 0;
                padding: 1em 0.5em 0.5em 0;
                font-weight: bold;
                float: left;
                top: -1.5em;
                z-index: 1;
                width: 80%;
              }
              #mc_embed_signup #mce-error-response {
                display: none;
              }
              #mc_embed_signup #mce-success-response {
                color: #529214;
                display: none;
              }
              #mc_embed_signup label.error {
                display: block;
                float: none;
                width: auto;
                margin-left: 1.05em;
                text-align: left;
                padding: 0.5em 0;
              }
              @media (max-width: 768px) {
                #mc_embed_signup input.email {
                  width: 100%;
                  margin-bottom: 5px;
                }
                #mc_embed_signup .button {
                  width: 100%;
                  margin: 0;
                }
              }
              ::-webkit-input-placeholder {
                /* Chrome/Opera/Safari */
                color: #113545;
              }

              input[type="email"] {
                max-width: 100% !important;
              }

              #mc_embed_signup form {
                padding: 0px auto;
              }

              #mc_embed_signup .button {
                max-width: 100px;
                width: 100%;
              }

              #mc_embed_signup {
                clear: left;
                width: 100%;
              }
              /* Add your own MailChimp form style overrides in your site stylesheet or in this style block.
								We recommend moving this block and the preceding CSS link to the HEAD of your HTML file. */
            </style>

            <div
              id="jnews_module1"
              class="newsletter"
              style="margin-top: 15px;margin-bottom:15px"
            >
              <!-- Begin MailChimp Signup Form -->

              <div id="mc_embed_shell">
                <div id="mc_embed_signup">
                  <form
                    action="https://humboldt.us4.list-manage.com/subscribe/post?u=8b7b6e645360b5ca05e9feecf&id=89ba7c353a&f_id=001298ebf0"
                    method="post"
                    id="mc-embedded-subscribe-form"
                    name="mc-embedded-subscribe-form"
                    class="validate w-full"
                    target="_self"
                    novalidate=""
                  >
                    <div
                      class="grid grid-cols-[80px_calc(100%-80px)] pr-10 mb-5"
                    >
                      <img
                        src="data:image/svg+xml;base64,"
                        alt=""
                      />
                      <p>
                        Suscríbete hoy a nuestro boletín de noticias
                        Institucionales, para que no te pierdas nada del día a
                        día del Instituto
                      </p>
                    </div>

                    <div class="mc-field-group w-full">
                      <div class="grid grid-cols-[70%_30%] gap-4">
                        <input
                          type="email"
                          name="EMAIL"
                          class="required email w-full rounded-lg bg-[#ffffff] border-none"
                          id="mce-EMAIL"
                          required=""
                          value=""
                          placeholder="Tu correo institucional"
                        />

                        <input
                          type="submit"
                          name="subscribe"
                          id="mc-embedded-subscribe"
                          class="button"
                          value="Enviar"
                          style="background-color:#000000;text-transform: capitalize; border-radius: 5px 5px 5px 5px; height: auto;"
                        />
                      </div>
                    </div>

                    <div hidden="">
                      <input
                        type="hidden"
                        name="tags"
                        value="6599234,6602074"
                      />
                    </div>
                    <div id="mce-responses" class="clear">
                      <div
                        class="response"
                        id="mce-error-response"
                        style="display: none;"
                      >
                      </div>
                      <div
                        class="response"
                        id="mce-success-response"
                        style="display: none;"
                      >
                      </div>
                    </div>

                    <div
                      aria-hidden="true"
                      style="position: absolute; left: -5000px;"
                    >
                      <input
                        type="text"
                        name="b_8b7b6e645360b5ca05e9feecf_89ba7c353a"
                        tabindex="-1"
                        value=""
                      />
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="rounded-lg bg-[#DCE0CD] p-5">
            <p>
              Si necesitas comunicar algo dentro del Instituto, <a
                href="https://docs.google.com/spreadsheets/d/1Ca3b0wNgkeZaWlPJzUCnU2QHGra4l8UX/edit?usp=sharing&ouid=102178195950741934077&rtpof=true&sd=true"
                target="_blank"
                rel="noopener noreferrer"
                class="text-azul-light font-bold">descarga aquí</a
              >
              el formato solicitud de comunicaciones internas y envialo al correo
              <a
                href="mailto:comunicacionesinternas@humboldt.org.co"
                class="font-bold">comunicacionesinternas@humboldt.org.co</a
              >
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="max-w-[90%] mx-auto mb-10" id="cumples">
      <h3 class="text-5xl md:text-7xl mt-16">Cumpleaños</h3>
      <hr class="mt-10 mb-7 border-gray-500" />
      <div style="flex-direction: column !important;">
        <iframe src="cumple" class="border-0 w-full h-auto min-h-[800px]"
        ></iframe>
      </div>
    </section>

    <section class="bg-[#DCE0CD] w-full py-5">
      <div class="max-w-[90%] mx-auto mb-10">
        <div class="grid grid-cols-1 lg:grid-cols-3 items-center">
          <div>
            <h4 class="text-center text-4xl text-azul-humboldt font-bold mb-2">
              Visita nuestra tienda
            </h4>
            <h5 class="font-light text-center">
              Lleva la biodiversidad a tu vida diaria
            </h5>
          </div>
          <div>
            <img
              src="img/Humboldt-Mockup_tienda.jpg"
              alt="rompecabezas desarmado"
            />
          </div>
          <div>
            <a
              href="https://tiendahumboldt.org"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-black rounded-full text-white px-2 py-4 mx-auto block max-w-[200px] text-center"
            >
              <img
                src="img/icono-compras.svg"
                alt="icono de bolsa de compras"
                class="inline"
                width="24"
              /> &nbsp; Compra aquí
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .link-card-grid {
    display: flex;
    justify-content: space-around;
    align-items: center;
    border: 1px solid #000;
    margin: 1em auto;
    padding: 1em;
    border-radius: 10em;
  }

  @media screen and (max-width: 767px) {
    .link-card-grid {
      flex-direction: column;
      border: none;
      margin: 0.5em auto;
      padding: 1em;
    }
  }
</style>
