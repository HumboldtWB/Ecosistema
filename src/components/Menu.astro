---
interface Props {
  title: string;
  href: string;
  classes: string;
  targets: string;
}

const { href, title,classes, targets } = Astro.props;
---

<li class="opciones my-3 md:my-0 ">
  <a href={href} class={classes} target={targets}>
    {title}
  </a>
</li>

<style>
  .active,
  .active:hover{
    background-color: black;
    color: white;
    border-radius: 10em;
    padding: 0.8rem 2.5rem;
  }
</style>
