---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<li class="opciones">
  <a href={href}>
    {title}
  </a>
</li>

<style>
  .opciones {
    list-style: none;
    display: flex;
    padding: 0.2em 1.2em;
    text-align: center;
    max-width: 220px;
    height: 60px;
    align-items: center;
    margin: 5px 0;
  }
  .opciones:hover {
    background-color: black;
    color: white;
    border-radius: 10em;
  }
  .opciones a {
    font-size: 14px;
    display: block;
    margin: auto;
    width: 100%;
    text-align: center;
  }
  @media screen and (max-width: 767px) {
    .opciones {
      padding: 0.2em 1.2em;
      height: 45px;
    }
  }
</style>
